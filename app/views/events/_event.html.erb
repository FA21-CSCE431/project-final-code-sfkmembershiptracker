<div id="<%= dom_id event %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= event.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Event Type:</strong>
    <%= event.event_type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Date:</strong>
    <%= event.date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Location:</strong>
    <%= event.location %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Points:</strong>
    <%= event.points %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Confirmation Code:</strong>
    <%= event.confirmation_code %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this event", event, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this event', edit_event_path(event), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

<div class="flex">
    <div class="w-full md:w-2/3">
        <h2 class="text-2xl mb-3">Upcoming Events</h2>
    </div>
    <% if current_user.member.position.role != "member" %>
        <div class="w-full md:w-1/3">
            <h2 class="text-2xl mb-3">Admin Tools</h2>
        </div>
    <% end %>
</div>
