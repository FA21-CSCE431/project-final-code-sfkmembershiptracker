<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="text-6xl font-black">Events</h1>
    <% if current_user.member.position.can_change_events? %>
      <%= link_to 'New event', new_event_path, class: "mt-2 py-3 px-5 inline-block font-medium bg-maroon hover:bg-maroon-light rounded-lg text-white" %>
    <% end %>
  </div>
  <hr class="mb-10">

  <div id="events" class="min-w-full">
    <%= render @events %>
  </div>
</div>
