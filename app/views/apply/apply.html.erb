<h1 class="text-6xl font-black">Apply Now</h1>
<hr class="mb-10">

<%= form_with url: "/answers", method: :post do |form| %>

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Phone Number
      </label>
	  <%= form.text_field :phone_number, :class =>"appearance-none block w-full bg-gray-200 text-gray-700 text-xs border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"%>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
        Expected Graduation Year and Semester
      </label>
	  <%= form.text_field :graduation, :class =>"appearance-none block w-full bg-gray-200 text-gray-700 text-xs border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"%>
    </div>
  </div>

	<% @questions.each do |q, i| %>
	<div class="flex flex-wrap -mx-3 mb-6">
		<div class="w-full px-3">
			<label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"><%= q.question %></br>	
				<div style="display: none;">
					<input type="text_field" name="answers[][q]" value="<%= q.question %>">
				</div>
			<textarea class="resize-none appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-48 resize-none" name="answers[][a]"></textarea>
			</label>
		</div>
	</div> 
	<% end %>

	<%= form.submit "Submit", :class => "shadow bg-maroon hover:bg-maroon-dark focus:shadow-outline text-white font-bold py-2 px-4 rounded-lg cursor-pointer"%>
<% end %>