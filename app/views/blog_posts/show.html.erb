<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @blog_post %>


    <% if current_user.member.position.can_change_events? %>
	  <%= link_to 'Edit this Post', edit_blog_post_path(@blog_post), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Delete this Post', blog_post_path(@blog_post), method: :delete, data: { confirm: "Are you sure you want to delete this blog post?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
	<% end %>

    <%= link_to 'Back to Blog', blog_posts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

  </div>
</div>
