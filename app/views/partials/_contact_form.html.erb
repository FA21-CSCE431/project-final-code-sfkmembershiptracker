<%= form_with url: '/contact', method: :post, remote: true do |f| %>
    <div class="w-full max-w-lg">
	  <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <%= f.label :name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= f.text_field  :name, required: true, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white", placeholder: "Jane Doe" %>
		</div>
      </div>

      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <%= f.label :email, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= f.text_field :email, required: true, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white", placeholder: "jane@example.com" %>
		</div>
	  </div>

      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
	      <%= f.label :message, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
          <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white",
                        placeholder: "Send me a message"%>
		</div>
	  </div>

      <div class="md:flex md:items-center">
        <div class="md:w-1/3">
	      <%= f.submit 'Send', class: "shadow bg-maroon hover:bg-maroon-dark focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
		</div>
      </div>
    </div>
<% end %>

