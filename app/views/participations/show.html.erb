<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @participation %>

    <% if current_user.member.position.can_change_events? %>
      <%= link_to 'Edit this participation', edit_participation_path(@participation), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Delete this participation', participation_path(@participation), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    <% end %>

    <%= link_to 'Back to events', events_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

  </div>
</div>
