<!-- component -->
<form class= method="POST">
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
        <%= form.label :first_name %>
        <%= form.text_field :first_name %>
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="app-first-name">
        First Name<span class="text-red-500">*</span>
      </label>
      <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="app-first-name" type="text" placeholder="Jane">
      <%# <p class="text-red-500 text-xs italic">This field is required.</p> %>
    </div>
  </div>
  <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="app-last-name">
        Last Name<span class="text-red-500">*</span>
      </label>
      <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="app-last-name" type="text" placeholder="Doe">
      <%# <p class="text-red-500 text-xs italic">This field is required.</p> %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="app-email">
        E-mail<span class="text-red-500">*</span>
      </label>
      <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="app-email" type="email" placeholder="jane@example.com">
      <%# <p class="text-red-500 text-xs italic">This field is required.</p> %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="app-phone">
        Phone<span class="text-red-500">*</span>
      </label>
      <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="app-phone" type="text" placeholder="(555)867-5309">
      <%# <p class="text-red-500 text-xs italic">This field is required.</p> %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="app-grad-date">
        Expected Graduation Date<span class="text-red-500">*</span>
      </label>
      <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="app-grad-date" type="date">
      <%# <p class="text-red-500 text-xs italic">This field is required.</p> %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="app-question">
        Message<span class="text-red-500">*</span>
      </label>
      <textarea class="resize-none appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 h-48 resize-none" id="app-question"></textarea>
      <%# <p class="text-red-500 text-xs italic">This field is required.</p> %>
    </div>
  </div>
  <div class="md:flex md:items-center">
    <div class="md:w-1/3">
      <button class="shadow bg-red-500 hover:bg-red-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="button">
        Apply
      </button>
    </div>
    <div class="md:w-2/3"></div>
  </div>
</form>
