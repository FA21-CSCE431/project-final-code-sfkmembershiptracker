<h1 class="text-6xl font-black">Apply Now</h1>
<hr class="mb-10">

<%= form_with url: "/answers", method: :post do |form| %>
	<p>What is your email?</p>
	<div class="border-1 px-3 py-3 bg-gray-100">
		<%= form.text_field :email %></br>
	</div>

	<% @questions.each do |q, i| %>
		<%= q.question %></br>
		<div class="border-1 px-3 py-3 bg-gray-100">
			<div style="display: none;">
				<input type="textbox" name="answers[][q]" value="<%= q.question %>" >
			</div>
			<input type="textbox" name="answers[][a]" >
		</div> 
	<% end %>

	<%= form.submit "Save" %>
<% end %>