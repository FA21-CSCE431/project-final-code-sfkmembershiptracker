<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @event %>

    <%= form_for @event do |f|%>
      <div class="my-5">
        <%= f.label :confirmation_code %><br />
        <%= f.password_field :confirmation_code, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      <div class="center">
        <%= f.submit "Submit code", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium" %><br />
      </div>
    <% end %>

    <% if current_user.member.position.can_change_events? %>
      <%= link_to 'Edit this event', edit_event_path(@event), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Delete this event', event_path(@event), method: :delete, data: { confirm: "Are you sure you want to delete this event?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    <% end %>

    <%= link_to 'Back to events', events_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

  </div>
</div>
