<div id="<%= dom_id application %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">First name:</strong>
    <%= application.first_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Last name:</strong>
    <%= application.last_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= application.email %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone:</strong>
    <%= application.phone %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Grad date:</strong>
    <%= application.grad_date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= application.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Question:</strong>
    <%= application.question %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this application", application, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this application', edit_application_path(application), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
